uses
  UnPRODUTOSTypes, UnTypesGeral,UnTypesCarregarSQL;

{$R *.dfm}

procedure TFormCadastroProduto.actNovoExecute(Sender: TObject);
begin
  inherited;
  DBEdit1.Text := IntToStr(TCarregarSQL.CarregarProximoID('CODIGO', 'CLIENTE'));
end;

procedure TFormCadastroProduto.FormShow(Sender: TObject);
begin
  SetConfigInicial;
  inherited;
end;

procedure TFormCadastroProduto.SetConfigInicial;
begin
  CarregarItemComboBox('Código', 'CODIGO');
  inherited;
end;

end.
