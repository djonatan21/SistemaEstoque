    procedure TimerCarregarTimer(Sender: TObject);
    procedure actAtualizarEstoqueExecute(Sender: TObject);
    procedure actCadastroEmpresaExecute(Sender: TObject);
    procedure actCadastroDepartamentoExecute(Sender: TObject);
